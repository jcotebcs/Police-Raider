{
  "name": "police-raider",
  "version": "1.0.0",
  "description": "A tactical police simulation game with strategic resource management",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon src/server/index.js",
    "client:dev": "cd src/client && npm start",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd src/client && npm run build",
    "server:build": "echo 'Server build complete'",
    "test": "npm run test:server && npm run test:client",
    "test:server": "jest src/server --testPathPattern=test",
    "test:client": "cd src/client && npm test -- --watchAll=false",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "security:audit": "npm audit",
    "security:scan": "node scripts/security-scan.js",
    "docker:build": "docker build -t police-raider .",
    "docker:run": "docker run -p 3000:3000 police-raider",
    "prepare": "husky install"
  },
  "keywords": [
    "game",
    "simulation",
    "police",
    "tactical",
    "strategy",
    "management"
  ],
  "author": "Autonomous Development Agent",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}